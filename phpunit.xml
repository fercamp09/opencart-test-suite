            <file>./tests/CustomerTest.php</file>
            <file>./tests/ManufacturerTest.php</file>
            <file>./tests/AccountTest.php</file>
            <file>./tests/LanguageTest.php</file>
            <file>./tests/CategoriesTest.php</file>
            <file>./tests/CartTest.php</file>
            <file>./tests/ProductTest.php</file>
        </testsuite>
        <testsuite name="admin-tests">
            <file>./tests/SampleAdminTest.php</file>
        </testsuite>
    </testsuites>
</phpunit>